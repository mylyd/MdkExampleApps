<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ID_width"
    android:layout_height="@dimen/ID_height"
    android:background="@mipmap/img_jkz_template"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/img_infor_photo"
            android:layout_width="@dimen/view_ViewSize_photo_width"
            android:layout_height="@dimen/view_ViewSize_photo_height"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp" />

        <ImageView
            android:id="@+id/img_infor_bar"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="290dp"
            android:background="@drawable/style_bordar_stroke"/>

        <TextView
            android:id="@+id/tv_infor_Site"
            android:layout_width="560dp"
            android:layout_height="30dp"
            android:textColor="#669610"
            android:layout_marginLeft="@dimen/view_margin_20dp"
            android:layout_marginRight="@dimen/view_margin_20dp"
            android:layout_alignParentBottom="true"
            android:text="武汉玛迪卡智能科技有限公司"
            android:textSize="@dimen/text_FontSize_15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_infor_Carid"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:textSize="15dp"
            android:text=""
            android:layout_marginLeft="140dp"
            android:layout_marginTop="145dp"
            android:paddingLeft="5dp"
            android:gravity="center|left"/>

        <TextView
            android:id="@+id/tv_infor_name"
            android:layout_width="@dimen/view_ViewSize_info_width"
            android:layout_height="@dimen/view_ViewSize_height"
            android:layout_toRightOf="@id/img_infor_photo"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@id/img_infor_photo"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:textSize="@dimen/text_FontSize_15dp"/>

        <TextView
            android:id="@+id/tv_infor_age"
            android:layout_width="@dimen/view_ViewSize_info_width"
            android:layout_height="@dimen/view_ViewSize_height"
            android:layout_alignTop="@id/tv_infor_name"
            android:layout_toRightOf="@id/tv_infor_name"
            android:layout_marginLeft="25dp"
            android:paddingLeft="10dp"
            android:gravity="center|left"
            android:textSize="@dimen/text_FontSize_15dp"/>

        <TextView
            android:id="@+id/tv_infor_sex"
            android:layout_width="@dimen/view_ViewSize_info_width"
            android:layout_height="@dimen/view_ViewSize_height"
            android:layout_below="@id/tv_infor_name"
            android:layout_alignLeft="@id/tv_infor_name"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:textSize="@dimen/text_FontSize_15dp"/>

        <TextView
            android:id="@+id/tv_infor_state"
            android:layout_width="@dimen/view_ViewSize_info_width"
            android:layout_height="@dimen/view_ViewSize_height"
            android:layout_alignLeft="@id/tv_infor_age"
            android:layout_below="@id/tv_infor_age"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:textSize="@dimen/text_FontSize_15dp"/>

        <TextView
            android:id="@+id/tv_infor_time"
            android:layout_width="@dimen/view_ViewSize_time_width"
            android:layout_height="@dimen/view_ViewSize_height"
            android:layout_below="@id/tv_infor_sex"
            android:layout_alignLeft="@id/tv_infor_sex"
            android:layout_marginTop="5dp"
            android:paddingLeft="5dp"
            android:gravity="center|left"
            android:textSize="@dimen/text_FontSize_15dp"/>

        <ImageView
            android:id="@+id/img_infor_gz"
            android:layout_width="@dimen/view_ViewSize_chapter_width"
            android:layout_height="@dimen/view_ViewSize_chapter_height"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/bg_y"/>

</RelativeLayout>


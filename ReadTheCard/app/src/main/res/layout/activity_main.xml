<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photo_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:scaleType="fitXY"/>


    <Button
        android:id="@+id/btn_photograph"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@mipmap/icon_photo"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#000"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_50dp"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="姓名："
                    android:gravity="center"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:maxLength="8"
                    android:text=""
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="修改"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="#0000"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_50dp"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="职位："
                    android:gravity="center"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_job"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_job"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="修改"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="#0000"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_50dp"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="手机："
                    android:gravity="center"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_tel"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:inputType="number"
                    android:maxLength="11"
                    android:text=""
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="修改"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="#0000"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_50dp"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="公司："
                    android:gravity="center"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_company"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:maxLines="1"
                    android:text=""
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_company"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="修改"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="#0000"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center|left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地址："
                    android:gravity="center"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_site"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="5dp"
                    android:text=""
                    android:textSize="16dp"/>

                <Button
                    android:id="@+id/btn_site"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="修改"
                    android:textSize="14dp"
                    android:layout_marginLeft="5dp"
                    android:background="#0000"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_put"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:text="上         传"
                android:textSize="22dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>